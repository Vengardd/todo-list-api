<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -%kvp- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.dominik.tasktracker.Main" level="debug" />
    <logger name="com.dominik.tasktracker.TaskDAO" level="debug" />

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>